            "name": "process1",
            "type": "cppdbg",
            // "request": "launch", 
            "request":"attach", // 修改"request"的值为"attach"即附加到进程中去
            "processId": "${command:pickProcess}", // !添加"processId"配置项
            // "program": "输入程序名称，例如 ${workspaceFolder}/a.out",
            "program": "${workspaceFolder}/build/hello-mpi", //修改为可执行程序所在位置
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
